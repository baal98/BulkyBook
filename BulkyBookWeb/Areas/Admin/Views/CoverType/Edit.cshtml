@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BulkyBook.Models.CoverType
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit CoverType</h2>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4" style="width: 150px">Update</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary mt-4" style="width: 150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    }

