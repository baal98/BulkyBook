@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BulkyBook.Models.CoverType>
    @{
    ViewData["Title"] = "Index";
    }
    
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">CoverType List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
                </a>
            </div>
        </div>
        <br />
        <br />

        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        CoverType Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
    {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square">Edit</i></a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash3">Delete</i></a>
                    </td>
                </tr>
    }
            </tbody>
        </table>
    </div>
